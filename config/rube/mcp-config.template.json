{
  "servers": [
    {
      "id": "rube",
      "entryPoint": "/usr/local/bin/rube mcp",
      "env": {
        "RUBE_API_KEY": "${RUBE_API_KEY}",
        "RUBE_WORKSPACE": "plasma-engine"
      },
      "options": {
        "connections": [
          "slack",
          "github",
          "google-drive",
          "google-sheets",
          "gmail"
        ]
      }
    }
  ]
}
