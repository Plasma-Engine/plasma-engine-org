# Plasma Engine Frontend Environment Variables

# =============================================================================
# API ENDPOINTS
# =============================================================================

# Gateway Service - Authentication and GraphQL Federation
NEXT_PUBLIC_GATEWAY_URL=http://localhost:8000

# Research Service - Document Processing and Vector Search
NEXT_PUBLIC_RESEARCH_URL=http://localhost:8001

# Brand Service - Social Monitoring and Sentiment Analysis
NEXT_PUBLIC_BRAND_URL=http://localhost:8002

# Content Service - AI Content Generation and Publishing
NEXT_PUBLIC_CONTENT_URL=http://localhost:8003

# Agent Service - Workflow Automation and Browser Control
NEXT_PUBLIC_AGENT_URL=http://localhost:8004

# =============================================================================
# WEBSOCKET ENDPOINTS
# =============================================================================

# Real-time WebSocket connections
NEXT_PUBLIC_WS_GATEWAY_URL=ws://localhost:8000/ws
NEXT_PUBLIC_WS_BRAND_URL=ws://localhost:8002/ws
NEXT_PUBLIC_WS_AGENT_URL=ws://localhost:8004/ws

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT Configuration
NEXT_PUBLIC_JWT_ISSUER=plasma-engine
NEXT_PUBLIC_JWT_AUDIENCE=plasma-engine-frontend

# OAuth Providers (Optional)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
NEXT_PUBLIC_GITHUB_CLIENT_ID=your-github-client-id

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# =============================================================================
# FEATURES FLAGS
# =============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PWA=false
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Development settings
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_DEBUG_MODE=true

# API Timeouts (milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_WEBSOCKET_TIMEOUT=5000

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# Production API endpoints (uncomment for production)
# NEXT_PUBLIC_GATEWAY_URL=https://api.plasmaengine.com
# NEXT_PUBLIC_RESEARCH_URL=https://research.plasmaengine.com  
# NEXT_PUBLIC_BRAND_URL=https://brand.plasmaengine.com
# NEXT_PUBLIC_CONTENT_URL=https://content.plasmaengine.com
# NEXT_PUBLIC_AGENT_URL=https://agent.plasmaengine.com

# Production WebSocket endpoints
# NEXT_PUBLIC_WS_GATEWAY_URL=wss://api.plasmaengine.com/ws
# NEXT_PUBLIC_WS_BRAND_URL=wss://brand.plasmaengine.com/ws
# NEXT_PUBLIC_WS_AGENT_URL=wss://agent.plasmaengine.com/ws