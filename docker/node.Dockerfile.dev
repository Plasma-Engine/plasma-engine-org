# Development Dockerfile for Node.js/TypeScript Services
# This is a template for Node.js-based services (Content, Agent)

FROM node:20-alpine

# Set build argument for environment
ARG ENVIRONMENT=development

# Set environment variables
ENV NODE_ENV=${ENVIRONMENT} \
    ENVIRONMENT=${ENVIRONMENT}

# Install system dependencies
RUN apk add --no-cache \
    bash \
    curl \
    git \
    vim \
    postgresql-client

# Create app directory
WORKDIR /app

# Install global development tools
RUN npm install -g \
    typescript \
    ts-node \
    nodemon \
    @types/node \
    npm-check-updates

# Copy package files first for better caching
COPY package*.json ./
COPY tsconfig*.json ./

# Install dependencies
RUN npm ci || npm install

# Copy application code
COPY . .

# Create non-root user
RUN addgroup -g 1000 plasma && \
    adduser -D -u 1000 -G plasma plasma && \
    chown -R plasma:plasma /app

USER plasma

# Expose port for debugging
EXPOSE 9229

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3000/api/health || exit 1

# Default command (can be overridden)
CMD ["npm", "run", "dev"]