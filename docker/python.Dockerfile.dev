# Development Dockerfile for Python Services
# This is a template for Python-based services (Gateway, Research, Brand)

FROM python:3.11-slim

# Set build argument for environment
ARG ENVIRONMENT=development

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    ENVIRONMENT=${ENVIRONMENT} \
    DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    postgresql-client \
    curl \
    git \
    vim \
    && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Install Python development tools
RUN pip install --upgrade pip setuptools wheel
RUN pip install \
    ipython \
    ipdb \
    black \
    flake8 \
    mypy \
    pytest \
    pytest-cov \
    pytest-asyncio \
    pytest-mock \
    watchdog

# Copy requirements first for better caching
COPY requirements*.txt ./
RUN pip install -r requirements.txt || pip install -r requirements-dev.txt || true

# Copy application code
COPY . .

# Create non-root user
RUN useradd -m -u 1000 plasma && chown -R plasma:plasma /app
USER plasma

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Default command (can be overridden)
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]