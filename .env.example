# Plasma Engine Local Development Environment Configuration
# Copy this file to .env and adjust values as needed

# Environment
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# PostgreSQL Configuration
POSTGRES_USER=plasma
POSTGRES_PASSWORD=plasma_dev
POSTGRES_DB=plasma_engine
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=

# Neo4j Configuration
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_dev
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# RabbitMQ Configuration
RABBITMQ_USER=plasma
RABBITMQ_PASSWORD=rabbit_dev
RABBITMQ_VHOST=plasma
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Service Ports
GATEWAY_PORT=8000
RESEARCH_PORT=8001
BRAND_PORT=8002
CONTENT_PORT=3000
AGENT_PORT=3001

# Development Tools Ports
ADMINER_PORT=8080
ADMINER_DESIGN=pepa-linha
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# JWT Configuration
JWT_SECRET=dev_jwt_secret_change_in_production_please
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# API Keys (Development - Replace with actual keys)
OPENAI_API_KEY=sk-dev-placeholder
ANTHROPIC_API_KEY=sk-ant-dev-placeholder
GOOGLE_API_KEY=dev-google-api-key
AZURE_OPENAI_API_KEY=dev-azure-key
AZURE_OPENAI_ENDPOINT=https://dev.openai.azure.com/

# External Services (Development)
STRIPE_SECRET_KEY=sk_test_placeholder
STRIPE_WEBHOOK_SECRET=whsec_test_placeholder
SENDGRID_API_KEY=SG.dev_placeholder
TWILIO_ACCOUNT_SID=AC_dev_placeholder
TWILIO_AUTH_TOKEN=dev_auth_token

# OAuth Configuration (Development)
GOOGLE_CLIENT_ID=dev-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=dev-google-secret
GITHUB_CLIENT_ID=dev-github-client-id
GITHUB_CLIENT_SECRET=dev-github-secret

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=Plasma Engine
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BRAND_URL=http://localhost:3001
NEXT_PUBLIC_AGENT_URL=http://localhost:3002

# S3/Storage Configuration (Local MinIO or AWS)
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=plasma-dev
S3_REGION=us-east-1

# Monitoring & Observability (Optional)
SENTRY_DSN=
DATADOG_API_KEY=
NEW_RELIC_LICENSE_KEY=

# Feature Flags
ENABLE_TELEMETRY=false
ENABLE_DEBUG_MODE=true
ENABLE_HOT_RELOAD=true
ENABLE_SWAGGER_UI=true
ENABLE_GRAPHQL_PLAYGROUND=true

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_ENABLED=true

# Celery Configuration
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_TIME_LIMIT=300
CELERY_TASK_SOFT_TIME_LIMIT=240

# Security
SECRET_KEY=dev-secret-key-change-in-production
ENCRYPTION_KEY=dev-encryption-key-32-characters
API_KEY_SALT=dev-api-key-salt

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Search Configuration (Elasticsearch/OpenSearch)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=plasma_dev

# Vector Database (Pinecone/Weaviate/Qdrant)
VECTOR_DB_URL=http://localhost:6333
VECTOR_DB_API_KEY=dev-vector-key
VECTOR_DB_COLLECTION=plasma_dev

# Webhook Configuration
WEBHOOK_SECRET=dev-webhook-secret
WEBHOOK_TIMEOUT=30